<% layout('cms/boilerplate')%>

<div class="d-flex">
    <h2 class="col-10 offset-1 mt-3 mb-5" id="editTitle">Edit - <%= foundPost.title %></h2>
</div>
<div class="d-flex">
    <form class="col-10 offset-1" action="/posts/<%=foundPost._id%>?_method=PUT" method="POST">
        <div class="form-group mb-3">
            <label for="postTitle" class="form-label">Title</label>
            <input type="text" class="form-control" id="postTitle" name="post[title]" value="<%= foundPost.title %>">
        </div>
        <div class="form-group mb-3">
            <label for="postDesc" class="form-label">Description</label>
            <textarea  type="text" class="form-control" id="postDesc" name="post[description]"><%= foundPost.description %></textarea>
        </div>
        <div class="form-group mb-3">
            <label for="postImg" class="form-label">Image</label>
            <input type="text" class="form-control" id="postImage" name="post[image]" value="<%= foundPost.image %>">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>